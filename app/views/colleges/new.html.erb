<h1>New College</h1>


<%= form_tag(colleges_url, method: 'post') do %>


  <div>
    <%= label_tag :name %><br />
    <%= text_field_tag :name %>
  </div>

  <div>
    <%= label_tag :address1 %><br />
    <%= text_field_tag :address1 %>
  </div>

  <div>
    <%= label_tag :address2 %><br />
    <%= text_field_tag :address2 %>
  </div>

  <div>
    <%= label_tag :city %><br />
    <%= text_field_tag :city %>
  </div>

  <div>
    <%= label_tag :state %><br />
    <%= text_field_tag :state %>
  </div>

  <div>
    <%= label_tag :zip %><br />
    <%= text_field_tag :zip %>
  </div>


  <div>
    <%= submit_tag "Create College" %>
  </div>
<% end %>
