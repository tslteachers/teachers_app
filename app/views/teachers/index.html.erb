<h1>Teachers</h1>

<p><%= link_to 'Add a New Teacher', new_teacher_url %></p>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Bio</th>
      <th>Highest degree</th>
      <th>Availability</th>
      <th>Email</th>
      <th>Phone</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @teachers.each do |teacher| %>
    <tr>
      <td><%= teacher.first_name %></td>
      <td><%= teacher.last_name %></td>
      <td><%= teacher.bio %></td>
      <td><%= teacher.highest_degree %></td>
      <td><%= teacher.availability %></td>
      <td><%= teacher.email %></td>
      <td><%= teacher.phone %></td>
  
      <td><%= link_to 'Show', teacher_url(teacher) %></td>
      <td><%= link_to 'Edit', edit_teacher_url(teacher) %></td>
      <td><%= link_to 'Destroy', teacher_url(teacher), method: 'delete', data: { confirm: "Do you really want to delete this teacher?" } %></td>

    </tr>
  <% end %>
  </tbody>
</table>

